@model ChangePasswordViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SR

@{
    ViewData["Title"] = SR["ChangePassword"];
    //ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card stacked-form">
            <div class="card-header ">
                <h4 class="card-title">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                @if (string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="OldPassword"></label>
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="text-right">
                            <button type="submit" class="btn btn-default"><i class="fa fa-save"></i> @SR["Confirm"]</button>
                        </div>
                    </form>
                }
                else
                {
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                    <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-default pull-right"><i class="fa fa-home"></i> @SR["GoToHome"]</a>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
