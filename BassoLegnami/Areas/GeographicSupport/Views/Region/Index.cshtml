@model IEnumerable<BassoLegnami.Model.Models.GeographicSupport.Region>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SR

@{
    ViewData["Title"] = string.Format("{0} {1}", SR["List"].Value, Html.DescriptionFor(model => model.FirstOrDefault().RegionID).ToString());
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card data-tables">
            <div class="card-body table-striped table-bordered table-hover dataTable dtr-inline table-full-width">
                <div class="card-header">
                    <h4 class="card-title title">@ViewData["Title"]</h4>
                </div>
                <hr />
                <div class="fresh-datatables">
                    <table class="table table-striped table-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.LabelFor(model => model.FirstOrDefault().RegionalZone.Name)</th>
                                <th>@Html.LabelFor(model => model.FirstOrDefault().Name)</th>
                                <th>@Html.LabelFor(model => model.FirstOrDefault().ISTATCode)</th>
                                <th>@Html.LabelFor(model => model.FirstOrDefault().Flag1)</th>
                                <th class="text-right">
                                    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> @SR["CreateNew"]</a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.RegionalZone.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ISTATCode)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Flag1)</td>
                                    <td class="text-right">
                                        <a asp-action="Details" asp-route-id="@item.RegionID" class="btn btn-default"><i class="fa fa-list-alt"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.RegionID" class="btn btn-md btn-warning"><i class="fa fa-pencil-square-o"></i> </a>
                                        <a asp-action="Delete" asp-route-id="@item.RegionID" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="8">@BassoLegnami.Resources.Models.SharedResource.Total @Model.Count()</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
