@model BassoLegnami.Model.Models.Support.Festivity
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SR

@{
    ViewData["Title"] = string.Format("{0} {1}", SR["Delete"].Value, Html.DisplayNameFor(model => model.FestivityID).ToString());
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card stacked-form">
            <div class="card-header">
                <h4 class="card-title title">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Delete">
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <display asp-for="Name" class="form-control"></display>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Day" class="control-label"></label>
                                <display asp-for="Day" class="form-control"></display>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Month" class="control-label"></label>
                                <display asp-for="Month" class="form-control"></display>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Year" class="control-label"></label>
                                <display asp-for="Year" class="form-control"></display>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="City" class="control-label"></label>
                                <display asp-for="City" class="form-control"></display>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="text-right">
                        <input type="hidden" asp-for="FestivityID" />
                        <button type="submit" value="Delete" class="btn btn-danger"><i class="fa fa-trash"></i> @SR["Delete"]</button>
                        <a asp-action="Index" class="btn btn-default"><i class="fa fa-chevron-left"></i> @SR["BackToList"]</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
