@model BassoLegnami.Model.Models.Support.Festivity
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SR

@{
    ViewData["Title"] = string.Format("{0} {1}", SR["Details"].Value, Html.DisplayNameFor(model => model.FestivityID).ToString());
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card stacked-form">
            <div class="card-header">
                <h4 class="card-title title">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Details">
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <display asp-for="Name" class="form-control"></display>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Day" class="control-label"></label>
                                <display asp-for="Day" class="form-control"></display>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Month" class="control-label"></label>
                                <display asp-for="Month" class="form-control"></display>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Year" class="control-label"></label>
                                <display asp-for="Year" class="form-control"></display>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="City" class="control-label"></label>
                                <display asp-for="City" class="form-control"></display>
                            </div>
                        </div>
                    </div>
                </form>
                <hr />
                <div class="text-right">
                    <a asp-action="Edit" asp-route-id="@Model.FestivityID" class="btn btn-warning"><i class="fa fa-pencil-square-o"></i> @SR["Edit"]</a>
                    <a asp-action="Index" class="btn btn-default"><i class="fa fa-chevron-left"></i> @SR["BackToList"]</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
