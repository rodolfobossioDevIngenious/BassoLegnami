@model IEnumerable<BassoLegnami.Model.Models.Support.Clienti>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SR

@{
    ViewData["Title"] = "Lista Clienti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Index">
            <div class="card stacked-form">
                <div class="card-header ">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"><i class="fa fa-close"></i></div>
                    <h4 class="card-title">@SR["SearchRecords"]</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">PartitaIva</label>
                                <input id="partitaIva" name="partitaIva" class="form-control" value="@ViewData["PartitaIva"]" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Ragione Sociale</label>
                                <input id="ragioneSociale" name="ragioneSociale" class="form-control" value="@ViewData["RagioneSociale"]" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="submit" name="submitButton" value="default" class="btn btn-default"><i class="fa fa-search"></i> @SR["SearchRecords"]</button>
                            <a asp-action="PrintPDF" class="btn btn-success"><i class="fa fa-print"></i> Stampa PDF</a>
                        </div>
                    </div>
                    @if (Model != null && Model.Count() == 0)
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                <hr />
                                <div class="alert alert-warning">
                                    <span><i class="fa fa-warning"></i> @SR["NoData"]</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card data-tables">
                <div class="card-body table-striped table-bordered table-hover dataTable dtr-inline table-full-width">
                    <div class="card-header">
                        <h4 class="card-title title">@ViewData["Title"]</h4>
                    </div>
                    <hr />
                    <div class="fresh-datatables">
                        <table class="table table-striped table-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th><displayName asp-for="@Model.FirstOrDefault().Codice" class="control-label"></displayName></th>
                                    <th><displayName asp-for="@Model.FirstOrDefault().PartitaIva" class="control-label"></displayName></th>
                                    <th><displayName asp-for="@Model.FirstOrDefault().Pagamento" class="control-label"></displayName></th>
                                    <th><displayName asp-for="@Model.FirstOrDefault().Cellulare" class="control-label"></displayName></th>
                                    <th><displayName asp-for="@Model.FirstOrDefault().Email" class="control-label"></displayName></th>
                                    <th><displayName asp-for="@Model.FirstOrDefault().Categoria" class="control-label"></displayName></th>
                                    <th class="text-right col-1">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><displayValue asp-for="@item.CompleteName" class="form-control"></displayValue></td>
                                        <td><displayValue asp-for="@item.PartitaIva" class="form-control"></displayValue></td>
                                        <td><displayValue asp-for="@item.Pagamento" class="form-control"></displayValue></td>
                                        <td><displayValue asp-for="@item.Phones" class="form-control"></displayValue></td>
                                        <td><displayValue asp-for="@item.Email" class="form-control"></displayValue></td>
                                        <td><displayValue asp-for="@item.Categoria" class="form-control"></displayValue></td>
                                        <td class="text-right">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default"><i class="fa fa-list-alt"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}